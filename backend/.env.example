# Backend Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=5002

# CORS Configuration
# Set to true for development, false for production
ALLOW_ALL_ORIGINS=false

# AI Model Configuration
YOLO_MODEL_NAME=yolov5s
LOCAL_CAPTION_MODEL=microsoft/git-base-coco

# Proctoring Thresholds
HEAD_YAW_THRESHOLD=60
HEAD_PITCH_THRESHOLD=40
GAZE_ALERT_DELAY=2.0
FACE_MISSING_ALERT_DELAY=3.0
YOLO_COOLDOWN=10.0
LOCAL_ANALYSIS_COOLDOWN=15.0

# MediaPipe Configuration
FACE_MESH_MAX_NUM_FACES=1
FACE_MESH_MIN_DETECTION_CONFIDENCE=0.5
FACE_MESH_MIN_TRACKING_CONFIDENCE=0.5

# Enhanced Detection Settings
ENABLE_EYE_TRACKING=true
YOLO_CONFIDENCE_THRESHOLD=0.5
ENABLE_BEHAVIOR_ANALYSIS=true
SUSPICION_SCORE_THRESHOLD=70
ALERT_HISTORY_SIZE=50
BEHAVIOR_ANALYSIS_WINDOW=60.0
ENABLE_MULTIPLE_FACE_DETECTION=true
